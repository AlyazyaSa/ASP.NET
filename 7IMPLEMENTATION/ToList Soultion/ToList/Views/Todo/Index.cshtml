@model List<Todo>
@{

}

<div>
    <a asp-controller="Todo" asp-action="Create" class="btn btn-primary">Create Todo</a>
</div>
@if (Model.Count() > 0)
{
    <table class="table table-hover table-striped">
        <thead>
        <th>
        <td>id</td>
        <td>name</td>
        <td>date</td>
        <td>is Finished</td>
        </th>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <th>
                    <td>
                        @item.Id
                    </td>

                    <td>
                        @item.Name
                    </td>

                    <td>
                        @item.CreateData.Month
                    </td>

                    <td>
                        @item.isFinished
                    </td>

                    <td>
                        <a asp-controller="Todo" asp-action="Update" asp-route-id=@item.Id class="btn btn-info"> Update </a>
                   </td>

                    <td>
                       <a asp-controller="Todo" asp-action="Delete" asp-route-id=@item.Id class="btn btn-danger"> Delete</a>
                    </td>


                </th>
           
            }

        </tbody>
    </table>
}

else
{
    <div class=" mt-4 bg-lightt">
    <h3>No todos are available</h3>
    </div>
}
